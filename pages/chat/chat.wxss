/* pages/chat/chat.wxss */
.search{  
  width: 80%;  
  height: 100rpx;
}  
.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin-left: 20rpx;  
}  
.search_arr input{  
  margin-left: 60rpx;  
  height: 70rpx;  
  border-radius: 5px;  
}     
.fd {  
  margin-left: 10rpx;  
  width: 18%;   
  height: 75rpx;
  text-align: center;  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  font-size: 13px;
}  
.page_row{  
  display: flex;  
  flex-direction: row;
  margin-top:20rpx;   
}  
.searchcion {  
  margin: 10rpx 10rpx 10rpx 10rpx;  
  position: absolute;  
  left:25rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center;  
}  
/* 收藏内容 */
.main{
  width:100%;
  height: 500px;
  background-color: white;
}
/* 子项内容 */
.head{
  display: flex;
  flex-direction: row;

}
.hp{
  flex: 1;
  margin: 10rpx 0;
}
.mid{
  flex: 6;
  display: flex;
  flex-direction:column; 
  margin: 20rpx 10rpx;
}
.add{
  flex: 1;
  margin: 30rpx 10rpx;
}
.mid .title{
  font-size: 15px;
}
.mid .det{
  font-size: 13px;
  color: gray;
}
.main .hp image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.head .add image{
  width: 60rpx;
  height: 50rpx;
  border-radius: 16rpx;
  background-color: white;
}
.msg{
  display: flex;
  flex-direction: column;
  background-color: beige;
  height: 150px;
}
.msg .tname{
  font-size: 15px;
  padding: 10rpx;
}
.msg .tred{
  padding: 10rpx;
  font-size: 13px;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.msg .like{
  padding: 10rpx;
  font-size: 13px;
  color: red;
}