/* pages/login/login.wxss */
.wrap{
  display: flex;
  flex-direction: column;
  width: 96%;
  height: 100vh;
  background-color: white;
  align-self: center;
}

.logo{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  margin-top: 16rpx;
  border-bottom: 1px solid gainsboro;
}

.logo image{
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 30rpx;
}

.login{
  width: 100%;
  background-color: white;
  margin-top: 10rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  padding-bottom: 15rpx;
}

.login form{
  display: flex;
  flex-direction: column;
  width: 100%;
}

form .username,.pwd{
   display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid gainsboro;
  font-size: 28rpx;
  padding-left: 20rpx;
}

form .username input{
  margin-left: 20rpx;
  flex: 5;
}
form label{
  flex: 1;
}

form .pwd input{
  margin-left: 20rpx;
  flex: 5;
}
button{
  margin-top: 20rpx;
  height: 100rpx;
  width: 96%;
  line-height: 100rpx;
  background-color: green;
  color: white;
}

.errMsg{
  font-size:20rpx;
  color: red;
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}
